        <Button x:Name="button" Content="Connect" HorizontalAlignment="Left" Margin="130,46,0,0" VerticalAlignment="Top" Width="75" Height="23"/>
        <Label x:Name="label_ConnectedStatus" Content="Connected" HorizontalAlignment="Left" Margin="158,10,0,0" VerticalAlignment="Top" Width="128" Foreground="#FF058717" FontWeight="Bold" FontSize="13.333"/>
        <Button x:Name="button2" Content="Disconnect&#xD;&#xA;" HorizontalAlignment="Left" Margin="205,46,0,0" VerticalAlignment="Top" Width="81
                " RenderTransformOrigin="0.187,-0.15" Height="23"/>

    </Grid>
</Window>
